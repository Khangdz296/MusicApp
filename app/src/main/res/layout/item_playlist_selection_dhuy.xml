<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="12dp"
    android:background="?attr/selectableItemBackground">

    <!-- Playlist Cover -->
    <ImageView
        android:id="@+id/imgPlaylistCover"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:src="@drawable/ic_playlist"
        android:scaleType="centerCrop"
        android:background="@color/spotify_dark_gray"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <!-- Playlist Info -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginStart="12dp"
        app:layout_constraintStart_toEndOf="@id/imgPlaylistCover"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <TextView
            android:id="@+id/tvPlaylistName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Playlist Name"
            android:textSize="16sp"
            android:textColor="@color/white"
            android:maxLines="1"
            android:ellipsize="end"
            android:fontFamily="sans-serif-medium"/>

        <TextView
            android:id="@+id/tvSongCount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="0 bài hát"
            android:textSize="13sp"
            android:textColor="@color/spotify_gray"
            android:layout_marginTop="2dp"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>