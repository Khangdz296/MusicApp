<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/color_bg">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbarNewSongs"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/color_surface"
        android:title="Nhạc mới cập nhật"
        android:titleTextColor="@color/color_text_primary"
        app:navigationIcon="@drawable/ic_arrow_back"
        app:menu="@menu/menu_new_songs"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvNewSongs"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:padding="16dp"
        app:layout_constraintTop_toBottomOf="@id/toolbarNewSongs"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:listitem="@layout/item_song_vertical" />

</androidx.constraintlayout.widget.ConstraintLayout>
