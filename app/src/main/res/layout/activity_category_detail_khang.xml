<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#121212">

    <View
        android:id="@+id/viewHeaderBackground"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="#E91E63"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/ivCategoryThumb"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:rotation="30"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_music_note"
        app:tint="#FFFFFF"
        android:translationX="5dp"
        android:translationY="-20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <ImageView
        android:id="@+id/btnBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:padding="8dp"
        android:rotation="180"
        android:src="@drawable/ic_status_arrow"
        app:tint="#FFFFFF"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvCategoryTitleDetail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="24dp"
        android:text="Pop"
        android:textColor="#FFFFFF"
        android:textSize="40sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/viewHeaderBackground"
        app:layout_constraintStart_toStartOf="parent" />

    <View
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/gradient_black_transparent"
        app:layout_constraintBottom_toBottomOf="@+id/viewHeaderBackground" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rcvDetailSongs"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="-10dp"
        android:clipToPadding="false"
        android:paddingBottom="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/viewHeaderBackground"
        tools:listitem="@layout/item_song_vertical_khang" />

</androidx.constraintlayout.widget.ConstraintLayout>